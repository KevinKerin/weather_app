    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/a_to_z_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sortAlphabetically"
            android:layout_weight="1"
            android:text="A-Z" />

        <Button
            android:id="@+id/temp_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="sortByTemperatureDescending"
            android:text="TEMPERATURE" />

        <Button
            android:id="@+id/last_updated_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sortByLastUpdatedDescending"
            android:layout_weight="1"
            android:text="LAST UPDATED" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:clipToPadding="false"
        android:padding="4dp"
        tools:listitem="@layout/item">


    </androidx.recyclerview.widget.RecyclerView>

